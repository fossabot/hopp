{
  "name": "hopp",
  "version": "1.0.0-alpha.1",
  "description": "Rapid & lightweight build system.",
  "main": "index.js",
  "directories": {
    "example": "example"
  },
  "bin": {
    "hopp": "index.js"
  },
  "scripts": {
    "prebuild": "rm -rf dist dist-legacy",
    "build": "npm run build-latest && npm run build-legacy",
    "build-latest": "babel src -d dist --source-maps --no-babelrc --plugins=babel-plugin-transform-es2015-modules-commonjs",
    "build-legacy": "babel src -d dist-legacy --source-maps",
    "pretest": "npm run build",
    "test": "npm run lint",
    "lint": "eslint src/*.js src/**/*.js",
    "lintfix": "eslint --fix src/*.js src/**/*.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/karimsa/hopp.git"
  },
  "keywords": [
    "build",
    "hopp"
  ],
  "author": "10244872 Canada Inc.",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/karimsa/hopp/issues"
  },
  "homepage": "https://github.com/karimsa/hopp#readme",
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.24.1",
    "babel-preset-env": "^1.5.2",
    "eslint": "^4.1.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.6.0",
    "eslint-plugin-node": "^5.0.0",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1"
  },
  "dependencies": {
    "map-stream": "0.0.7",
    "minimatch": "^3.0.4",
    "minimist": "^1.2.0",
    "pump": "^1.0.2",
    "regenerator-runtime": "^0.10.5",
    "require-like": "^0.1.2",
    "semver": "^5.3.0",
    "strip-ansi": "^4.0.0",
    "through": "^2.3.8",
    "tmp": "0.0.31"
  }
}
