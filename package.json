{
  "name": "hopp",
  "version": "0.0.0",
  "description": "Rapid & lightweight build system.",
  "main": "index.js",
  "directories": {
    "example": "example"
  },
  "bin": {
    "hopp": "index.js"
  },
  "scripts": {
    "prebuild": "rm -rf dist dist-legacy",
    "build": "npm run build-latest && npm run build-legacy",
    "build-latest": "babel src -d dist --source-maps inline --no-babelrc --plugins=babel-plugin-transform-es2015-modules-commonjs",
    "build-legacy": "babel src -d dist-legacy --source-maps inline",
    "test": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/karimsa/hopp.git"
  },
  "keywords": [
    "build",
    "hopp"
  ],
  "author": "Karim Alibhai",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/karimsa/hopp/issues"
  },
  "homepage": "https://github.com/karimsa/hopp#readme",
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.24.1"
  },
  "dependencies": {
    "babel-core": "^6.25.0",
    "babel-preset-env": "^1.5.2",
    "glob": "^7.1.2",
    "regenerator-runtime": "^0.10.5",
    "require-like": "^0.1.2"
  }
}
